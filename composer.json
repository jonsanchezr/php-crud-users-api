{
    "name": "jonathan-sanchez/php_crud_user",
    "description": "PHP CRUD User",
    "type": "project",
    "authors": [
        {
            "name": "jonathan-sanchez",
            "email": "jsanchez.dev1991@gmail.com"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^5.3"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests --coverage-clover coverage.xml",
        "test:coverage": "./vendor/bin/phpunit tests --coverage-html coverage_html",
        "start": "php -S 127.0.0.1:5000 -t public"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "api/",
            "App\\": "/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
